{
  "$schema": "$XDG_CONFIG_HOME/swaync/configSchema.json",
  "control-center-layer": "overlay",
  "control-center-margin-bottom": 6,
  "control-center-margin-top": 6,
  "control-center-margin-left": 0,
  "control-center-margin-right": 1,
  "control-center-width": 500,
  "control-center-height": 800,
  "cssPriority": "application",
  "control-center-positionX":"left",
  "control-center-positionY":"bottom",
  "fit-to-screen": false,
  "hide-on-action": true,
  "hide-on-clear": false,
  "image-visibility": "when-available",
  "keyboard-shortcuts": true,
  "layer": "layer",
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "notification-icon-size": 40,
  "notification-inline-replies": true,
  "notification-visibility": {},
  "notification-window-width": 400,
  "positionX": "left",
  "positionY": "bottom",
  "script-fail-notify": true,
  "scripts": {},
  "timeout": 3,
  "timeout-critical": 0,
  "timeout-low": 5,
  "transition-time": 100,
  "widget-config": {
    "buttons-grid": {
      "actions": [
        {
          "active": false,
          "command": "$HOME/.config/swaync/scripts/hyprsun.sh",
          "label": "󰤄",
          "type": "toggle"
        },
        {      
          "active": false,
          "command": "swaync-client -d",
          "label": "",
          "type": "toggle"
        },
   
        {
          "active": false,
          "command": "nwg-bar -p bottom",
          "label": "",
          "type": "button"
        }
      ]
    },
    "mpris": {
      "image-radius": 12,
      "image-size": 96
    },
    "title": {
      "text": "Notifications",
      "button-text": "󰎟 Clear",
      "clear-all-button": true      
    },
    "volume": {
      "label": "",
        "show-per-app": true,
        "show-per-app-icon": true,
        "show-per-app-label":true
    }
},

  "widgets": [
    "title",
    "notifications",
    "buttons-grid",
    "mpris",
    "volume"
  ]
}